	<mongo:mongo-client id="mongoClient2" credentials="">
		<mongo:client-options write-concern="SAFE"  
			connections-per-host="10" max-wait-time="5000" socket-timeout="10000"
			socket-keep-alive="true" />
	</mongo:mongo-client>
	
	<bean id="asdasd" class="org.springframework.data.mongodb.core.SimpleMongoDbFactory">
	<constructor-arg name="uri" ref="mongoClientURI" />
	</bean>



	<bean id="mongoTemplate2" class="org.springframework.data.mongodb.core.MongoTemplate">
	    <constructor-arg name="" ref="mongoClient2" />
		<constructor-arg name="mongoDbFactory" ref="asdasd" />
	</bean>


</beans>


